<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_includes') %>
    <title>MAP APP HOME</title>
  </head>

  <body>
    <%- include('partials/_nav') %>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/5/57/Concord_Pacific_Master_Plan_Area.jpg" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <p class="display-4 font-italic text-dark font-weight-bold">View maps posted by users all around the world</p>
            <form method="GET" action="/search">
              <button type="submit" class="btn btn-secondary btn-lg">Search Now!</button>
            </form>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/b/b6/Lower_Manhattan_from_Jersey_City_November_2014_panorama_3.jpg" alt="Second slide">
          <div class="carousel-caption d-none d-md-block">
            <p class="display-4 font-italic text-dark font-weight-bold">Share maps with users all around the world</p>
            <button type="button" class="btn btn-secondary btn-lg"> SEARCH NOW !</button>
          </div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/9/91/Melbourne_as_viewed_from_the_Shrine%2C_January_2019.png" alt="Third slide">
          <div class="carousel-caption d-none d-md-block">
            <p class="display-4 font-italic text-dark font-weight-bold">Favorite maps shared by users all around the world</p>
            <button type="button" class="btn btn-secondary btn-lg"> SEARCH NOW !</button>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h3 id="recommandation" class="text-dark font-weight-bold">Recommandation</h3>
    <% for(let i = 0; i < locations.length; i++) { %>
    <div class="container">
      <div class="col-md-6 grid-item">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-success">Active</strong>
            <h3 class="mb-0">
              <a class="text-dark" href="/detail/<%= locations[i]['id'] %>"><%= locations[i]['name'] %></a>
            </h3>
            <button type="button" class="btn btn-outline-info">Add to Favorites</button>
            <p class="card-text mb-auto"><%= locations[i]['description'] %></p>
          </div>
        </div>
      </div>
      <% i++ %>
      <div class="col-md-6 grid-item">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-success">Active</strong>
            <h3 class="mb-0">
              <a class="text-dark" href="/detail/<%= locations[i]['id'] %>"><%= locations[i]['name'] %></a>
            </h3>
            <button type="button" class="btn btn-outline-info">Add to Favorites</button>
            <p class="card-text mb-auto"><%= locations[i]['description'] %></p>
          </div>
        </div>
      </div>
    </div>
    <% } %>


  </body>
</html>
